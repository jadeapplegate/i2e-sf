<div class="album-list">
  {{#each model as |album|}}
  {{!-- use the above `each` syntax rather than `each model in |model|`, this syntax is deprecated --}}
  <div class="album">
    {{#link-to 'album' album }}
  {{!-- the first thing you reference in the `link-to` is the `route`, then reference the `model` --}}
        <img src={{album.artwork}}>
    {{/link-to}}
    <p class="album-name">{{album.name}}</p>
    <p class="album-artist">{{album.artist}}</p>
    <p class="song-count">
      8 songs
      {{#if album.isExplicit}}
        <span class='explicit'>EXPLICIT</span>
      {{/if}}
    </p>
  </div>
  {{/each}}
</div>
